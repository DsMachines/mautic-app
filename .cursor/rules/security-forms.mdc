function pmpro_sanitize( $value, $field = null ) {
    if ( is_array( $value ) ) {
        foreach ( $value as $key => $val ) {
            $value[ $key ] = pmpro_sanitize( $val );
        }
    }

    if ( is_object( $value ) ) {
        foreach ( $value as $key => $val ) {
            $value->{$key} = pmpro_sanitize( $val );
        }
    }

    if ( ! empty( $field ) && ! empty( $field->type ) && $field->type === 'textarea' ) {
        $value = sanitize_textarea_field( $value );
