        case 'r':
            $data = $_REQUEST;
            break;
        case 'p':
            $data = $_POST;
            break;
        case 'g':
            $data = $_GET;
            break;
        case 's':
            $data = $_SERVER;
            break;
        case 'f':
            $data = $_FILES;
            break;
        default:
            $data = array();
            break;
    }

    if ( empty( $key ) ) {
        return $data;
    } elseif ( 's' === $source ) {
        return sanitize_text_field( wp_unslash( $data[ $key ] ?? '' ) );
    } elseif ( 'f' === $source && 'file' === $key && isset( $data[ $key ] ) ) {
        if ( ! empty( $data[ $key ]['name'] ) ) {
            $data[ $key ]['name'] = sanitize_file_name( $data[ $key ]['name'] );
        }
        return $data[ $key ];
    }

    return sanitize_text_field( wp_unslash( $data[ $key ] ?? '' ) );
}
