            case 'get_var':
                return $this->wpdb->get_var($sql);
            case 'get_col':
                return $this->wpdb->get_col($sql);
            case 'query':
                return $this->wpdb->query($sql);
            default:
                return $this->wpdb->get_results($sql);
        }
    }
    
    // Template-specific logging
